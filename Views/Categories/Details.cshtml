@model AddressBook.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="glass-cf-style darkGlass p-2">

    <div>
        <h4>Category</h4>
        <hr />
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>

        </dl>
        <h5>Contacts Under @Html.DisplayFor(model => model.Name) Category</h5>

        @foreach (var contact in @Model.Contacts)
        {
            <br/><a asp-controller="Contacts" asp-action="Details" asp-route-id="@contact.Id">@contact.FullName</a>
        }
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>